@model Product

@{
    ViewData["Title"] = "Artikeldetails";

}

<form asp-controller="Products" asp-action="ProductDetails">

    <div class="card">
        <div class="card-header">
            <h5>Artikeldetails</h5>
        </div>

        <div class="card-body">
            <div class="mb-3">
                <label class="form-label">Artikelnummer</label>
                <div class="col-sm-3">
                    <input class="form-control form-control-sm" type="text" asp-for="ProductNumber" placeholder="" />
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label">Artikelbezeichnung</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control form-control-sm" asp-for="Description" />
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label">Artikelbezeichnung 2</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control form-control-sm" asp-for="Description2" />
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label">Hersteller</label>
                <div class="col-sm-3">
                    <input class="form-control form-control-sm" type="text" asp-for="Manufacturer" />
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label">Herstellernummer</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control form-control-sm" asp-for="ManufacturerNumber" />
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label">EAN</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control form-control-sm" asp-for="EAN" />
                </div>
            </div>
            <div>
                <label class="form-label">Warengruppe</label>
                <div class="col-sm-3">
                    <input class="form-control form-control-sm" asp-for="ClassificationSchemeGroup" />
                </div>
            </div>  
        </div>
    </div>

        <hr />
    
    <div class="card">
        <div class="card-header">
            <h5>Preise</h5>
        </div>

        <div class="card-body">
            <div class="mb-3">
                <label class="form-label">Verkaufspreis</label>
                <div class="col-sm-2">
                    <input type="text" class="form-control form-control-sm" />
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label">UVP</label>
                <div class="col-sm-2">
                    <input type="text" class="form-control form-control-sm" />
                </div>
            </div>
        </div>
    </div>

    <div class="card-footer">
        <button class="btn btn-primary" type="submit">Save changes</button>
    </div>

</form>

<partial name="_ProductImages" />